# web browser
super + w
    exo-open --launch WebBrowser

# terminal emulator
super + t
    exo-open --launch TerminalEmulator

# file manager
super + f
    exo-open --launch FileManager

# program launcher
super + @space
    rofr.sh -r

# program launcher
alt + F1
    rofr.sh -r

# make sxhkd reload its configuration files:
super + shift + r
    pkill -USR1 -x sxhkd

XF86AudioMute
    pamixer -t
XF86AudioRaiseVolume
    pamixer -i 2
XF86AudioLowerVolume
    pamixer -d 2
XF86MonBrightnessUp
    xbacklight +10
XF86MonBrightnessDown
    xbacklight -10
